		"clasp": "^1.0.0",
		"esbuild": "^0.25.6",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "yarn@4.9.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
